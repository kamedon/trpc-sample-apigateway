{
  "compilerOptions": {
    "target": "ES2017",
    "noErrorTruncation": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": "./",
  },
  "exclude": [
    "./src/server.ts",
    "./dist",
    "./types",
  ]
}
